<%- include('./partials/header') %>

<ul>
<% shelves.forEach(function(s) { %>
        <li class="main">
                <p id="title"><%= s.bookName %>: <%= s.status %></p>
                <form action="/shelves/<%= s._id %>?_method=DELETE" method="POST">
                        <button class="delete" type="submit">🗑</button>
                </form> 
                <a class="edit" href="/shelves/<%= s._id%>/edit">✏</a>
        </li>
<% }); %>
</ul>

<form class="add" action="/shelves" method="POST">
        <label>Book Title
            <input type="text" name="bookName">
        </label>
        <label>Status
                <select name="status">
                        <option value="reading">Reading</option>
                        <option value="toRead">Want to Read</option>
                        <option value="read">Already Read</option>
                </select>
        </label>
        <input type="submit" value="Add Book">
    </form>

<div class="status">
        <a class="status" href="/shelves/toRead/view">Books To Read</a>
        <a class="status" href="/shelves/reading/view">Currently Reading</a>
        <a class="status" href="/shelves/read/view">Books You've Read</a>
</div>


<%- include('./partials/footer') %>
