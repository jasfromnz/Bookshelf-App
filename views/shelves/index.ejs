</script>

<ul class="reading">
        <h1 class="shelf-title">Reading</h1>
        <div class="books">
                <% for (let i=0; i<4; i++) { %>
                        <% if (!reading[i]) { } else { %>
                                <li class="main" id="book<%= i %>">
                                        <p id="title"><%= reading[i].bookName %></p>
                                        <form action="/shelves/<%= reading[i]._id %>?_method=DELETE" method="POST">
                                                <button class="delete" type="submit">üóë</button>
                                        </form> 
                                        <a class="edit" href="/shelves/<%= reading[i]._id%>/edit">‚úè</a>
                                </li>
                        <% }; %>
                <% }; %>
                <li class="see-more">
                        <a class="see-more" href="/shelves/reading/view">See More</a>
                </li>
        </div>
</ul>

